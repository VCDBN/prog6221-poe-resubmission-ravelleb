<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe App" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <ListView x:Name="RecipeList" Grid.Row="0">
            <!-- Recipe list items go here -->
        </ListView>

        <GroupBox Header="Recipe Details" Grid.Row="1">
            <StackPanel>
                <TextBlock x:Name="RecipeNameLabel" FontWeight="Bold" FontSize="18"/>
                <TextBlock x:Name="TotalCaloriesLabel" Margin="0,10,0,0"/>
                <TextBlock Text="Ingredients:" FontWeight="Bold" Margin="0,20,0,5"/>
                <ListView x:Name="IngredientList" Height="100">
                    <!-- Ingredients list items go here -->
                </ListView>
                <TextBlock Text="Steps:" FontWeight="Bold" Margin="0,10,0,5"/>
                <ListBox x:Name="StepList" Height="100">
                    <!-- Steps list items go here -->
                </ListBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
